# Demo Environment - No external dependencies
NODE_ENV=demo
PORT=3000
API_PREFIX=/api/v1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration (disabled for demo)
DB_HOST=demo-mode-disabled
DB_PORT=5432
DB_NAME=demo
DB_USER=demo
DB_PASSWORD=demo
DB_SSL=false

# Redis Configuration (disabled for demo)
REDIS_HOST=demo-mode-disabled
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=demo-secret-key-not-for-production
JWT_REFRESH_SECRET=demo-refresh-secret-key-not-for-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# All other services disabled for demo
BCRYPT_ROUNDS=8
ENCRYPTION_KEY=demo-encryption-key-32characters

# Development Tools
SWAGGER_ENABLED=true
LOG_LEVEL=info
